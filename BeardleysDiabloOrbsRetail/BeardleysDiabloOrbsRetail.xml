<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
    <Script file="BeardleysDiabloOrbsRetail.lua"/>
    <!-- Generic orb frame for inheritance -->
    <Frame name="BDOMod_OrbFrame" framestrata="MEDIUM" parent="UIParent" virtual="true">
        <Size x="230" y="230" />
        <Scripts>
            <OnEvent>
                BDOMod_OnEvent(self, event, ...);
            </OnEvent>
            <OnLoad>
                BDOMod_OnLoad(self);
            </OnLoad>
        </Scripts>
    </Frame>
    <Frame name="BDOMod_Bar" inherits="BDOMod_OrbFrame">
        <Anchors>
            <Anchor point="BOTTOM">
                <Offset>
                    <AbsDimension x="0" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
    </Frame>
    <!-- Health Orb -->
    <Frame name="BDOMod_HealthOrb" inherits="BDOMod_OrbFrame" parent="BDOMod_Bar">
        <Anchors>
            <Anchor point="BOTTOM">
                <Offset>
                    <AbsDimension x="-430" y="-4"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <!-- Health Background Layer -->
            <Layer level="BACKGROUND">
                <Texture name="BDOMod_RedOrbBackground" file="Interface/AddOns/BeardleysDiabloOrbsRetail/art/orb_fill.png">
                    <Size>
                        <AbsDimension x="230" y="230"/>
                    </Size>
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <Texture name="BDOMod_RedOrb" file="Interface/AddOns/BeardleysDiabloOrbsRetail/art/orb_mist.png">
                    <Size>
                        <AbsDimension x="230" y="230"/>
                    </Size>
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <Texture name="BDOMod_RedOrbShield" file="Interface/AddOns/BeardleysDiabloOrbsRetail/art/orb_fill.png">
                    <Size>
                        <AbsDimension x="230" y="230"/>
                    </Size>
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>       
        </Layers>
    </Frame>
    <!-- Mana Orb -->
    <Frame name="BDOMod_ManaOrb" inherits="BDOMod_OrbFrame" parent="BDOMod_Bar">
        <Anchors>
            <Anchor point="BOTTOM">
                <Offset>
                    <AbsDimension x="430" y="-4"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <!-- Mana Background Layer -->
            <Layer level="BACKGROUND">
                <Texture name="BDOMod_BlueOrbBackground" file="Interface/AddOns/BeardleysDiabloOrbsRetail/art/orb_fill.png">
                    <Size>
                        <AbsDimension x="230" y="230"/>
                    </Size>
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <Texture name="BDOMod_BlueOrb" file="Interface/AddOns/BeardleysDiabloOrbsRetail/art/orb_mist.png">
                    <Size>
                        <AbsDimension x="230" y="230"/>
                    </Size>
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Frame>
</Ui>
